    <link rel="stylesheet" href="css/main.css" />
    <title>Meal Finder</title>
  </head>
  <body>
    <header>
      <div class="container">
        <h1>Meal Finder</h1>

        <!-- search meal -->
        include ./../modules/search-box/index.pug
      </div>
    </header>

    <!-- Random Meal -->
    <div class="randomMeal">
      <div class="container">
        <h2 class="randomMeal__heading title">Random Meal</h2>
