          img(src="https://www.themealdb.com/images/media/meals/urzj1d1587670726.jpg",alt="hamburger")

          <div class="randomMeal__img__info">
            <div class="randomMeal__img__info__name">Big Mac</div>
            <button class="randomMeal__img__info__category btn--primary">
              Beef
            </button>
          </div>
        </div>
      </div>
    </div>

